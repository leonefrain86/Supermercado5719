@model IEnumerable<Supermercado5719.Models.Articulo>
<div class="row">
    <div class="col-10">
        <h1 class="display-4">Articulo</h1>
    </div>
</div>
<br />
<a role="button" asp-controller="Articulo" asp-action="Agregar" class="btn btn-outline-primary">Agregar</a>
<br />
<br />
<p>Cantidad articulos: <b>@ViewBag.CantidadArticulos</b></p>
<table class="table table-bordered table-hover table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>codigoBarra</th>
            <th>descripcion</th>
            <th>descripcionAbreviada</th>
            <th>codigoInterno</th>
            <th>precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var articulo in Model)
        {
        <tr>
            <td>@articulo.id </td>
            <td>@articulo.codigoBarra </td>
            <td>@articulo.descripcion </td>
            <td>@articulo.descripcionAbreviada </td>
            <td>@articulo.codigoInterno </td>
            <td>@articulo.precio </td>
            <td>
                <a asp-controller="Articulo" asp-action="Editar" asp-route-id="@articulo.id" class="btn btn-link">Editar</a> |
                <a asp-controller="Articulo" asp-action="Eliminar" asp-route-id="@articulo.id" class="btn btn-link">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>